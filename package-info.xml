<?xml version="1.0"?>
<!DOCTYPE package-info SYSTEM "http://www.elkarte.net/site/package-info">
<package-info xmlns="http://www.elkarte.net/site/package-info" xmlns:elk="http://www.elkarte.net/">
	<id>Spuds:DescriptiveLinks</id>
	<name>Descriptive Links</name>
	<version>1.0</version>
	<type>modification</type>
	<license><![CDATA[
/**
 * Descriptive Links
 *
 * @author spuds
 * @license MPL 1.1 http://mozilla.org/MPL/1.1/
 *
 * @version 1.0
 */
]]></license>
	<install for="1.0 Beta - 1.0.99">
		<database>add_settings.php</database>
		<readme type="file" parsebbc="true">readme.txt</readme>
		<modification type="file">install.xml</modification>
		<require-file name="dlinks.class.php" destination="SUBSDIR" />
		<require-file name="dlinks.integration.php" destination="SOURCEDIR" />
		<hook hook="integrate_modify_modifications" file="SUBSDIR/dlinks.integration.php" function="imm_dlinks" />
		<hook hook="integrate_admin_areas" file="SUBSDIR/dlinks.integration.php" function="iaa_dlinks" />
		<hook hook="integrate_load_permissions" file="SUBSDIR/dlinks.integration.php" function="ilp_dlinks" />
		<hook hook="integrate_preparse_code" file="SUBSDIR/dlinks.integration.php" function="ipc_dlinks" />
		<modification>language.xml</modification>
		<redirect url="?action=admin;area=addonsettings;sa=dlinks" timeout="5000">redirect.txt</redirect>
	</install>
	<uninstall for="1.0 Beta - 1.0.99">
		<readme type="file" parsebbc="true">readme-uninstall.txt</readme>
		<hook reverse="true" hook="integrate_modify_modifications" file="SUBSDIR/dlinks.integration.php" function="imm_dlinks" />
		<hook reverse="true" hook="integrate_admin_areas" file="SUBSDIR/dlinks.integration.php" function="iaa_dlinks" />
		<hook reverse="true" hook="integrate_load_permissions" file="SUBSDIR/dlinks.integration.php" function="ilp_dlinks" />
		<hook reverse="true" hook="integrate_preparse_code" file="SUBSDIR/dlinks.integration.php" function="ipc_dlinks" />
		<modification type="file" reverse="true">install.xml</modification>
		<modification type="file" reverse="true">language.xml</modification>
		<remove-file name="SUBSDIR/dlinks.class.php" />
		<remove-file name="SOURCEDIR/dlinks.integration.php" />
	</uninstall>

</package-info>